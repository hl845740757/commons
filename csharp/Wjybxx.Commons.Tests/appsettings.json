{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Warning",
            "Override": {
                "System": "Warning",
                "Microsoft": "Information"
            }
        },
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "Enrich": [
            "WithMachineName",
            "WithProcessId",
            "WithProcessName",
            "WithThreadId"
        ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] [{MachineName}/{ProcessId}-{ThreadId}] {Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] [{MachineName}/{ProcessId}-{ThreadId}] {Message}{NewLine}{Exception}",
                    "shared": true,
                    "rollOnFileSizeLimit": true,
                    "fileSizeLimitBytes": 102400000,
                    "retainedFileCountLimit": 14
                }
            }
        ]
    }
}